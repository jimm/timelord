#!/bin/bash
#
# usage: timelord [start | stop]

PIDFILE=tmp/pids/server.pid

cd $(dirname $0)/..
mkdir -p tmp/pids

case "$1" in
    start)
        thin -d -a localhost -p 3000 -e production -P $PIDFILE start
        ;;
    stop)
        thin -P $PIDFILE stop
        ;;
    *)
        usage: $0 '[start | stop]'
esac
