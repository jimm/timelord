<h1>Locations</h1>

<%= paginate @locations %><br/>

<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.name %></td>
    <td class="actions">
      <%= link_to image_tag('information.png'), location %>
      <%= link_to image_tag('edit.png'), edit_location_path(location) %>
      <%= link_to image_tag('delete.png'), location, confirm: 'Are you sure?', method: :delete %>
</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to image_tag('add.png'), new_location_path %> <%= link_to 'New Location', new_location_path %>
