<h1>Users</h1>

<%= paginate @users %><br/>

<table>
  <tr>
    <th>Login</th>
    <th>Role</th>
    <th>Name</th>
    <th>Email</th>
    <th>Address</th>
    <th>Rate Type</th>
    <th>Rate</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.role %></td>
    <td><%= user.name %></td>
    <td><a href="mailto:<%= user.email %>"><%= user.email %></a></td>
    <td><%= user.address %></td>
    <td><%= user.rate_type %></td>
    <td><%= money_str(user.rate_amount_cents) %></td>
    <td>
      <%= link_to 'Show', user %>
      <%= link_to 'Edit', edit_user_path(user) %>
      <%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
