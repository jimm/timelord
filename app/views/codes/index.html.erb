<h1>Codes</h1>

<%= paginate @codes %><br/>

<table>
  <tr>
    <th>Location</th>
    <th>Code</th>
    <th>Name</th>
    <th></th>
  </tr>

<% @codes.each do |code| %>
  <tr>
    <td><%= code.location.name %></td>
    <td><%= code.code %></td>
    <td><%= code.name %></td>
    <td class="actions">
      <%= link_to image_tag('information.png'), code %>
      <%= link_to image_tag('edit.png'), edit_code_path(code) %>
      <%= link_to image_tag('delete.png'), code, confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

